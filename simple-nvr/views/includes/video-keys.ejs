<script>
    window.onkeydown = vidCtrl;

    function vidCtrl(e) {
        const vid = document.querySelector('video');
        const key = e.code;

        if (key === 'ArrowLeft') {
            vid.currentTime -= 5;
            if (vid.currentTime < 0) {
                vid.pause();
                vid.currentTime = 0;
            }
        } else if (key === 'ArrowRight') {
            vid.currentTime += 5;
            if (vid.currentTime > vid.duration) {
                vid.pause();
                vid.currentTime = 0;
            }
        } else if (key === 'Space') {
            if (vid.paused || vid.ended) {
                vid.play();
            } else {
                vid.pause();
            }
        }
    }
</script>